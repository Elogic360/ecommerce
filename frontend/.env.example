# ============================================================================
# FRONTEND ENVIRONMENT CONFIGURATION
# Neatify E-Commerce Platform (Vite + React)
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control!
# ============================================================================
# Note: All Vite environment variables must be prefixed with VITE_
# See: https://vitejs.dev/guide/env-and-mode.html
# ============================================================================

# ============================================================================
# API CONFIGURATION (Required)
# ============================================================================
# Backend API URL - MUST include /api/v1 suffix
# REQUIRED: This must be set in production
VITE_API_URL=https://neatify-o1s6.onrender.com/api/v1

# WebSocket URL - For real-time features (orders, inventory, notifications)
# REQUIRED if using WebSocket features
# Use wss:// for secure connections (required for HTTPS sites)
VITE_WS_URL=wss://neatify-o1s6.onrender.com

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
# Application name displayed in the UI
VITE_APP_NAME=Neatify

# Application description
VITE_APP_DESCRIPTION=Your one-stop shop for all household and compound cleaning materials

# Application version
VITE_APP_VERSION=1.5.0

# ============================================================================
# FEATURE FLAGS (Optional)
# ============================================================================
# Enable/disable features
VITE_ENABLE_CART_PERSISTENCE=true
VITE_ENABLE_WISHLIST=true
VITE_ENABLE_REVIEWS=true

# ============================================================================
# THIRD-PARTY SERVICES (Optional)
# ============================================================================
# Google OAuth Client ID - Required for Google Sign-In
# Get from: https://console.cloud.google.com/apis/credentials
VITE_GOOGLE_CLIENT_ID=915255756642-sssn2m9k8hrp73f0devrpt39od2c03gv.apps.googleusercontent.com

# Stripe public key (for payment processing)
# Get from: https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# PayPal Client ID (for payment processing)
# Get from: https://developer.paypal.com/dashboard/applications
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id

# Google Analytics Tracking ID
VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X

# ============================================================================
# CURRENCY & LOCALIZATION
# ============================================================================
VITE_DEFAULT_CURRENCY=TZS
VITE_DEFAULT_LANGUAGE=en

# ============================================================================
# IMAGE/ASSET CONFIGURATION (Optional)
# ============================================================================
# Base URL for images - usually same as backend URL
VITE_IMAGE_BASE_URL=https://neatify-o1s6.onrender.com

# CDN URL for static assets (leave empty for local)
# VITE_CDN_URL=https://cdn.yourstore.com

# Default product image placeholder
VITE_DEFAULT_PRODUCT_IMAGE=/placeholder-product.svg

# ============================================================================
# SOCIAL MEDIA LINKS (Optional)
# ============================================================================
VITE_FACEBOOK_URL=https://facebook.com/yourstore
VITE_TWITTER_URL=https://twitter.com/yourstore
VITE_INSTAGRAM_URL=https://instagram.com/yourstore

# ============================================================================
# CONTACT INFORMATION (Optional)
# ============================================================================
VITE_CONTACT_EMAIL=support@yourstore.com
VITE_CONTACT_PHONE=+1-234-567-8900

# ============================================================================
# PAGINATION & UI SETTINGS (Optional)
# ============================================================================
# Default items per page
VITE_DEFAULT_PAGE_SIZE=12

# Maximum items per page
VITE_MAX_PAGE_SIZE=48

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================
# These are automatically set by Vite based on the mode
# You don't need to set these manually
# - import.meta.env.DEV (true in development)
# - import.meta.env.PROD (true in production)
# - import.meta.env.MODE ('development' | 'production')
# ============================================================================
